<h1>Eventos</h1>
<%= link_to 'Crear Evento', new_event_path, class: 'btn btn-lg gold' %>
<br/>
<br/>
<div class="portlet box gold">
  <div class="portlet-title">
    <div class="caption">Datos</div>
    <div class="tools">
      <a class="collapse" href="javascript:;"></a>
      <a class="config" data-toggle="modal" href="#portlet-config"></a>
      <a class="reload" href="javascript:;"></a>
      <a class="remove" href="javascript:;"></a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Lugar</th>
      <th>Fecha</th>
      <th>Inventario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.place %></td>
        <td><%= event.d_event %></td>
        <td>
          <% if event.gifts.in_stock.size == 0 %>
              <span class='label label-sm label-danger'>No</span>
          <% else %>
              <span class='label label-sm label-success'>Disponible</span>
          <% end %>
        </td>
        <td><%= link_to 'Ver Regalos', event %></td>
        <td><%= link_to 'Editar', edit_event_path(event) %></td>
        <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
      </table>
    </div>
  </div>
</div>
<br>


