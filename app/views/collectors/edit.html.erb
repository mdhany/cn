<h2>Editar <%= @collector.name %></h2>

<%= form_for(@collector, as: :collector, url: collectors_path(@collector), method: :put) do |f| %>
    <% if @collector.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@collector.errors.count, "error") %> prohibited this collector from being saved:</h2>

          <ul>
            <% @collector.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div><%= f.label :name %><br />
      <%= f.text_field :name %></div>

    <div><%= f.label :email %><br />
      <%= f.email_field :email %></div>


    <div><%= f.submit "Actualizar" %></div>


<% end %>

