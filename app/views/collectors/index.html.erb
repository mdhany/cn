
<h1>Usuarios Recolectores</h1>
<%= link_to 'Crear Recolector', new_collector_registration_path, class: 'btn btn-lg gold' %>
<br/>
<br/>
<div class="portlet box gold">
  <div class="portlet-title">
    <div class="caption">Datos</div>
    <div class="tools">
      <a class="collapse" href="javascript:;"></a>
      <a class="config" data-toggle="modal" href="#portlet-config"></a>
      <a class="reload" href="javascript:;"></a>
      <a class="remove" href="javascript:;"></a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table table-hover">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @collectors.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.email %></td>
        <td><%#= link_to 'Editar', "#" %></td>
        <td><%#= link_to 'Eliminar', cancel_collector_registration_path %></td>
      </tr>
  <% end %>
  </tbody>
      </table>
    </div>
  </div>
</div>

