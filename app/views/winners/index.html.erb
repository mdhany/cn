<h1>Ganadores <%= link_to "Sortear Ganadores", new_winner_path, class: 'btn btn-lg blue' %></h1>


<div class="portlet box green">
  <div class="portlet-title">
    <div class="caption">Total de ganadores: <%= @winners.count %> </div>
    <div class="tools">
      <a class="collapse" href="javascript:;"></a>
      <a class="config" data-toggle="modal" href="#portlet-config"></a>
      <a class="reload" href="javascript:;"></a>
      <a class="remove" href="javascript:;"></a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Factura</th>
          <th>Regalo</th>
          <th>Fecha de sorteo</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @winners.each do |i| %>
            <tr>
              <td><%= link_to i.invoice.customer.name, customer_path(i.invoice.customer) %></td>
              <td><%= link_to i.invoice.number, invoice_path(i.invoice_id) %></td>
              <td><%= i.gift.name %></td>
              <td><%= i.created_at %></td>
              <td><%#= link_to 'Editar', edit_gift_path(i)  %></td>
              <td><%= link_to 'Eliminar', i, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
